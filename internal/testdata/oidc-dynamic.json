{
  "listen_address": "0.0.0.0",
  "listen_port": 8080,
  "log_level": "debug",
  "chains": [
    {
      "name": "oidc",
      "filters": [
        {
          "oidc": {
            "configuration_uri": "http://fake",
            "callback_uri": "http://fake/callback",
            "proxy_uri": "http://fake",
            "jwks": "fake-jwks",
            "client_id": "fake-client-id",
            "client_secret": "fake-client-secret",
            "client_authentication_method": "client_secret_post",
            "id_token": {
              "preamble": "Bearer",
              "header": "authorization"
            },
            "redis_session_store_config": {
              "server_uri": "redis://localhost:6379/0",
              "username": "authservice",
              "password_file": "/etc/authservice/redis/password",
              "tls_config": {
                "skip_verify_peer_cert": true,
                "trusted_ca_file": "/etc/authservice/certs/ca.crt",
                "client_cert_file": "/etc/authservice/certs/tls.crt",
                "client_key_file": "/etc/authservice/certs/tls.key"
              }
            },
            "skip_verify_peer_cert": true,
            "token_exchange": {
              "token_exchange_uri": "http://fake/token-exchange",
              "client_credentials": {}
            }
          }
        }
      ]
    }
  ]
}
